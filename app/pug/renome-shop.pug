			i.fas.fa-angle-right.fa-2x.b-shop__arrow--right
			i.fas.fa-angle-left.fa-2x.b-shop__arrow--left
			.b-shop__number
				ul
					li
						a(href="#") 1
					li
						a(href="#") 2
					li
						a(href="#") 3
					li
						a(href="#") 4
					li
						a(href="#") 5


				
			